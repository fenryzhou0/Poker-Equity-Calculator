class Card:


    def __init__(self, value, suit):
        self.value = value
        self.suit = suit
        
    def printCard(self):
        print(self.value, self.suit)

    def getHandOne(self):
        cardOneValueMenu = "Enter the number for Card One's Value:\r\n"
        cardOneSuitMenu = "Enter the suit for Card One:\r\n"
        cardTwoValueMenu = "Enter the number for Card Two's Value:\r\n"
        cardTwoSuitMenu = "Enter the suit for Card Two:\r\n"

        cardOneValue = input(cardOneValueMenu)
        if cardOneValue == "Jack":
            cardOneValue = 11
        if cardOneValue == "Queen":
            cardOneValue = 12
        if cardOneValue == "King":
            cardOneValue = 13
        if cardOneValue == "Ace":
            cardOneValue = 14

        cardOneSuit = input(cardOneSuitMenu)
        if cardOneSuit == "Spade":
            cardOneSuit = 1
        if cardOneSuit == "Club":
            cardOneSuit = 2
        if cardOneSuit == "Heart":
            cardOneSuit = 3
        if cardOneSuit == "Diamond":
            cardOneSuit = 4

        cardTwoValue = input(cardTwoValueMenu)
        if cardTwoValue == "Jack":
            cardTwoValue = 11
        if cardTwoValue == "Queen":
            cardTwoValue = 12
        if cardTwoValue == "King":
            cardTwoValue = 13
        if cardTwoValue == "Ace":
            cardTwoValue = 14

        cardTwoSuit = input(cardTwoSuitMenu)
        if cardTwoSuit == "Spade":
            cardTwoSuit = 1
        if cardTwoSuit == "Club":
            cardTwoSuit = 2
        if cardTwoSuit == "Heart":
            cardTwoSuit = 3
        if cardTwoSuit == "Diamond":
            cardTwoSuit = 4

        
        


class Deck:
    def __init__(self):
        self.cards = []
        self.createDeck()
        

        
    def createDeck(self):
        for s in ["Spades", "Clubs", "Diamonds", "Hearts"]:
            for v in range(1, 15):
                if v == 11:
                    v = "Jack"
                if v == 12:
                    v = "Queen"
                if v == 13:
                    v = "King"
                if v == 14: 
                    v = "Ace"
                self.cards.append(Card(v, s))

    def printDeck(self):
        for c in self.cards:
            c.printCard()




        

    


        
